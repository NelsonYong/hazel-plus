{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "types": ["unplugin-vue-define-options"],
    "outDir": "./.type",
    "paths": {
      "@/*": ["packages/*"],
      "@hazel-plus/*": ["packages/*"],
      "hazel-plus": ["packages/hazel-plus/index.ts"]
    }
  },
  "include": ["packages", "typings/components.d.ts", "typings/env.d.ts", "docs"]
}
