{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "outDir": "./.type",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "types": ["unplugin-vue-define-options"]
    // "emitDeclarationOnly": true,
    // "declarationDir": "./.type"
  },
  "base": ".",
  "root": "./",
  "paths": {
    "@": ["./packages/*"],
    "@hazel-plus": ["./packages/*"],
    "@hazel-plus/ui": ["./packages/components/*"],
    "@hazel-plus/hook": ["./packages/hooks/*"]
  },
  "include": [
    "examples",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "vite-env.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
